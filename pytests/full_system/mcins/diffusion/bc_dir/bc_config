[DIRICHLET]
# NOTE: using exp instead of step change to avoid strange oscilation behaviour.
a = right -> ramp(t, 1.0, 0.0, 1.0)
b = right -> ramp(t, 0.0, 1.0, 1.0)
c = right -> ramp(t, 0.5, 0.0, 1.0)
    left  -> ramp(t, 0.5, 1.0, 1.0)

[NEUMANN]
a = top    -> 0
    bottom -> 0
    left   -> 0
b = top    -> 0
    bottom -> 0
    left   -> 0
c = top    -> 0
    bottom -> 0
